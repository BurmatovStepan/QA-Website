{
  "name": "qa-website",
  "version": "1.0.0",
  "description": "TechnoPark, sem_1 project",
  "scripts": {
    "prestart": "npm run build:dev",
    "start": "concurrently \"npm run watch:assets\" \"npm run watch:scss\" \"npm run watch:ts\" \"python manage.py runserver\"",
    "watch:assets": "chokidar src/assets/**/* -c \"npm run copy-assets\"",
    "copy-assets": "node copy-assets.js",
    "watch:scss": "sass --watch src/scss/style.scss:static/style.css",
    "build:scss:dev": "sass src/scss/style.scss:static/style.css",
    "build:scss:prod": "sass src/scss/style.scss:static/style.css --style=compressed",
    "watch:ts": "tsc --watch",
    "build:ts": "tsc",
    "build": "npm run clean && npm run copy-assets && npm run build:scss:prod && npm run build:ts",
    "build:dev": "npm run clean && npm run copy-assets && npm run build:scss:dev && npm run build:ts",
    "clean": "rimraf static/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-stepan:BurmatovStepan/QA-Website.git"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^24.8.1",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^9.2.1",
    "rimraf": "^6.0.1",
    "sass": "^1.93.3",
    "typescript": "^5.9.3"
  }
}
